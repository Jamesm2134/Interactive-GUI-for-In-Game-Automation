def afk_Walk_Click():
    seconds_Wait = input("How many seconds do you want to have the program wait before starting")
    time.sleep(int(seconds_Wait))

    while True:
        pyautogui.keyDown('w')
        pyautogui.keyDown('shiftleft')
        pyautogui.mouseDown(button='left')

        if keyboard.is_pressed('esc'):
            print("program over")
            break
